<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>signin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">

  <link href="https://s3.amazonaws.com/codiqa-cdn/codiqa.ext.css" rel="stylesheet">
  <link href="https://s3.amazonaws.com/codiqa-cdn/mobile/1.4.2/jquery.mobile-1.4.2.css" rel="stylesheet">

  <link rel="stylesheet" type="text/css" href="/css/style.css">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script src="https://s3.amazonaws.com/codiqa-cdn/mobile/1.4.2/jquery.mobile-1.4.2.min.js"></script>
  <script src="https://s3.amazonaws.com/codiqa-cdn/codiqa.ext.js"></script>

  <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>

  <script>
  function test1() {
    $.getJSON("../data.json", callbackFuncWithData);
    function callbackFuncWithData(data)
    {
      var email = $("#email").val();
      var pwd = $("#pwd").val();
      if (email == '' || pwd == '') {
        alert("Please fill all fields...!!!");
        window.location="signin.html";
      } else if (data.user[0].username == email && data.user[0].password == pwd) {
        window.location="home.html";
      } else {
        alert("invalid username or password");
        window.location="signin.html";
      }
    }
  }
  </script>

</head>
<body>
  <div data-role="page" data-control-title="login" id="page4">
    <div data-theme="b" data-role="header">
      <h1 onclick="window.location.href='/index'" class="ui-title">
        CITIZEN SCIENTIST
      </h1>
      <a onclick="window.location.href='/index'" data-transition="fade" data-icon="home">
        Home
      </a>
    </div>
    <form>
      <div role="main" class="ui-content">
        <div class="ui-field-contain" data-controltype="textarea">
          <label for="email">
            EMAIL:
          </label>
          <input id="email">
        </div>
        <div class="ui-field-contain" data-controltype="textarea">
          <label for="password">
            PASSWORD:
          </label>
          <input type="password" id="pwd" placeholder="">
        </div>
        <div data-role="navbar" data-iconpos="top">
          <ul>
            <li>

              <button onclick="test1()" id="login" data-transition="fade" data-theme="" data-icon="">
                SIGN IN
              </button>
            </li>
          </ul>
        </div>
        <div data-role="navbar" data-iconpos="top">
          <ul>
            <li>
              <a onclick="window.location.href='/forgotpassword'" data-transition="fade" data-theme="" data-icon="">
                FORGOT PASSWORD?
              </a>
            </li>
          </ul>
        </div>
        <div data-role="navbar" data-iconpos="left">
          <ul>
            <li>
              <a onclick="window.location.href='/index'" data-transition="fade" data-theme="" data-icon="arrow-l">
                BACK
              </a>
            </li>
          </ul>
        </div>
      </div>
    </form>
  </div>

</body>
</html>
